<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

    <CheckBox
        android:id="@+id/note_list_item_solvedCheckbox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:enabled="false"
        android:focusable="false"
        android:gravity="center"
        android:padding="4dp"
        />

    <TextView
        android:id="@+id/note_list_item_titleTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@id/note_list_item_solvedCheckbox"
        android:paddingLeft="40dp"
        android:paddingRight="40dp"
        android:text="记事本"
        android:textStyle="bold"
        />

    <TextView
        android:id="@+id/note_list_item_dateTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/note_list_item_titleTextView"
        android:layout_toLeftOf="@id/note_list_item_solvedCheckbox"
        android:paddingLeft="40dp"
        android:paddingRight="40dp"
        android:paddingTop="4dp"
        android:text="日期"
        />

</RelativeLayout>